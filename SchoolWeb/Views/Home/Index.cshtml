@model DashboardInfoViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div id="container">
    <h4 class="text-success-emphasis mb-3 font-weight-bold">Dashboard</h4>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-left-primary shadow py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Total Students
                            </div>
                            <div class="h5 mb-0 font-weight-bolder text-success-emphasis">@Model.TotalStudents</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-journals fs-3 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-left-primary shadow py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Total Grades
                            </div>
                            <div class="h5 mb-0 font-weight-bolder text-success-emphasis">@Model.TotalGrades</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-alphabet-uppercase fs-3 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-left-primary shadow py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Total Teachers
                            </div>
                            <div class="h5 mb-0 font-weight-bolder text-success-emphasis">@Model.TotalTeachers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-workspace fs-3 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-left-primary shadow py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Total Study plans
                            </div>
                            <div class="h5 mb-0 font-weight-bolder text-success-emphasis">@Model.TotalStudyPlans</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calculator fs-3 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="enrollmentDasboard">

    </div>
</div>

@section Scripts{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="~/js/enrollmentdashboard.js"></script>
}