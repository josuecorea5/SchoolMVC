@model Subject
<div class="bg-light-subtle bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h3 class="text-primary">Subject's Detail</h3>
        </div>
    </div>
</div>
<div class="card d-flex flex-row shadow border-0 mt-4 m-auto" style="width: 900px; height: 320px">
    <div class="card-body col-6 d-flex flex-column justify-content-between">
        <div class="row">
            <div class="col-6">
                <p class="card-title"><b>Code:</b> @Model.Code</p>
            </div>
            <div class="col-6">
                <p class="card-title"><b>Name:</b> @Model.Name</p>
            </div>
            <p class="card-text col-6"><b>Teacher:</b> @Model.Teacher.Name @Model.Teacher.LastName</p>
            <p class="card-text col-6"  ><b>Title:</b> @Model.Teacher.Title</p>
            <div class="col-6">
                <p class="card-text"><b>Description:</b> @Model.Description</p>
            </div>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-3 col-md-3">
        <a asp-controller="Subject" asp-action="Index" class="btn btn-secondary bg-transparent text-primary form-control">Back to list</a>
    </div>
</div>