@model Student
<div class="bg-light-subtle bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h3 class="text-primary">Student's Detail</h3>
        </div>
    </div>
</div>
<div class="card d-flex flex-row shadow border-0 mt-4 m-auto" style="width: 900px; height: 320px">
    <div class="card-body col-6 d-flex flex-column justify-content-between">
        <p class="card-title"><b>Name:</b> @Model.Name @Model.LastName</p>
        <p class="card-text"><b>Date of birth:</b> @Model.DateOfBirth.ToShortDateString()</p>
        <p class="card-text"><b>Age:</b> @Model.Age</p>
        <p class="card-text"><b>Code:</b> @Model.Code</p>
        <p class="card-text"><b>Email:</b> @Model.Email</p>
        <p class="card-text"><b>Phone:</b> @Model.Phone</p>
    </div>
    <div>
        <img class="card-img-top" src="@Model.Image" style="height: 100%; width: 100%; object-fit: contain;" alt="Card image cap">
    </div>
</div>
<div class="row mt-5">
    <div class="col-3 col-md-3">
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary bg-transparent text-primary form-control">Back to list</a>
    </div>
</div>